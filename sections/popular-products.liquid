<script>
  let currentPage = 1;
  const productsPerPage = 4;
  const collectionHandle = '{{ section.settings.collection.handle }}';
  let loading = false;
  let hasMoreProducts = true;

  async function loadMoreProducts() {
    if (loading || !hasMoreProducts) return;
    
    loading = true;
    const button = document.getElementById('load-more-btn');
    const originalText = button.innerHTML;
    setButtonState('Loading...', true);

    try {
      const response = await fetch(`/collections/${collectionHandle}/products.json?page=${currentPage + 1}&limit=4`);
      const data = await response.json();
      
      if (data.products && data.products.length > 0) {
        const productsGrid = document.querySelector('.products-grid');
        
        data.products.forEach(product => {
          const productCard = createProductCard(product);
          productsGrid.insertAdjacentHTML('beforeend', productCard);
        });
        
        currentPage++;
        
        if (data.products.length < productsPerPage) {
          setButtonState('No more products to load', true);
          hasMoreProducts = false;
        } else {
          setButtonState('Load more products', false);
        }
      } else {
        setButtonState('No more products to load', true);
        hasMoreProducts = false;
      }
    } catch (error) {
      console.error('Error loading more products:', error);
      setButtonState('Error loading products', false);
      setTimeout(() => setButtonState(originalText, false), 2000);
    }
    
    loading = false;
  }

  function setButtonState(text, disabled) {
    const button = document.getElementById('load-more-btn');
    button.innerHTML = text;
    button.disabled = disabled;
    
    if (disabled) {
      button.style.backgroundColor = '#e5e7eb';
      button.style.color = '#6b7280';
      button.style.cursor = 'not-allowed';
      button.style.opacity = '0.5';
    } else {
      button.style.backgroundColor = '';
      button.style.color = '';
      button.style.cursor = 'pointer';
      button.style.opacity = '';
    }
  }

  function createProductCard(product) {
    const variant = product.variants && product.variants[0] ? product.variants[0] : {};
    const price = variant.price || 0;
    const comparePrice = variant.compare_at_price;
    const image = product.images && product.images[0] ? product.images[0] : {};
    const hasSale = comparePrice && comparePrice > price;
    const discountPercent = hasSale ? Math.round(((comparePrice - price) / comparePrice) * 100) : 0;
    
    let badges = '';
    if (product.tags && product.tags.includes('bestseller')) {
      badges = '<div class="absolute top-3 left-4 flex gap-4"><div class="bg-blue-50 text-blue-600 px-2 py-1 text-xs rounded-full flex items-center gap-1"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg><span>Bestseller</span></div></div>';
    } else if (product.tags && product.tags.includes('onsale') && hasSale) {
      badges = '<div class="absolute top-3 left-4 flex gap-4"><div class="bg-red-50 text-red-600 px-2 py-1 text-xs rounded-full">⚡ ' + discountPercent + '% Off</div></div>';
    }
    
    const priceDisplay = hasSale 
      ? '<span class="text-red-600">' + (price / 100).toFixed(2) + '€</span> <span class="line-through text-gray-400">' + (comparePrice / 100).toFixed(2) + '€</span>'
      : '<span>' + (price / 100).toFixed(2) + '€</span>';
    
    const imageUrl = image.src || 'https://cdn.shopify.com/s/files/1/0553/5072/files/placeholder-image.png?v=1';
    const productTitle = product.title || 'Product';
    const productHandle = product.handle || '#';
    
    return '<div class="flex flex-col bg-white p-4 shadow-sm rounded-lg relative">' +
      badges +
      '<a href="/products/' + productHandle + '" class="flex">' +
        '<img class="w-full h-auto" src="' + imageUrl + '" alt="' + productTitle + '" height="300" width="300">' +
      '</a>' +
      '<h3 class="mb-0 text-base">' +
        '<a class="no-underline text-black font-semibold" href="/products/' + productHandle + '">' + productTitle + '</a>' +
      '</h3>' +
      '<div class="my-3">' +
        '<div class="price--large">' + priceDisplay + '</div>' +
      '</div>' +
      '<div class="mt-auto">' +
        '<a class="bg-black text-white uppercase text-sm font-semibold tracking-[2px] py-3 px-4 rounded-lg no-underline w-full text-center block" href="/products/' + productHandle + '">View All</a>' +
      '</div>' +
    '</div>';
  }
</script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding bg-cover bg-center"
  style="background-color: {{ section.settings.background_color }}; background-image: url('{{ section.settings.background_image | image_url }}');">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="text-3xl md:text-4xl font-black mt-0">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="text-center mb-12">{{ section.settings.subheading }}</p>
    {% endif %}
    <div class="grid grid-cols-2 gap-6 md:gap-8 md:grid-cols-4 products-grid">
      {% for product in section.settings.collection.products limit: 4 %}
        <div class="flex flex-col bg-white p-4 shadow-sm rounded-lg relative">
          {% if product.tags contains 'bestseller' or product.tags contains 'onsale' %}
            <div class="absolute top-3 left-4 flex gap-4">
              {% if product.tags contains 'bestseller' %}
                <div class="bg-blue-50 text-blue-600 px-2 py-1 text-xs rounded-full flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>  
                  <span>Bestseller</span>
                </div>
              {% elsif product.tags contains 'onsale' %}
                <div class="bg-red-50 text-red-600 px-2 py-1 text-xs rounded-full">⚡ On Sale</div>
              {% endif %}
            </div>
          {% endif %}
          <a href="{{ product.url }}" class="flex">
            <img
              class="w-full h-auto"
              src="{{ product.images.first |  image_url: width: 300 }}"
              alt="{{ product.title }}"
              height="{{ product.images.first.height }}"
              width="{{ product.images.first.width }}">
          </a>
          {% comment %} <div class="line-clamp-3 text-sm [&_br]:hidden mt-2">
            {{ product.metafields.custom.short_description | metafield_tag }}
          </div> {% endcomment %}
          <h3 class="mb-0 text-base">
            <a class="no-underline text-black font-semibold" href="{{product.url}}">
              {{ product.title }}
            </a>
          </h3>
          <div class="my-3">
            {%- render 'price'
              , product: product
              , use_variant: true
              , show_badges: false
              , price_class: 'price--large'
            -%}
          </div>
          <div class="mt-auto">
            <a class="bg-black text-white uppercase text-sm font-semibold tracking-[2px] py-3 px-4 rounded-lg no-underline w-full text-center block" href="{{ product.url }}">
              View All
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="text-center pt-14">
      <button id="load-more-btn" onclick="loadMoreProducts()" class="px-5 py-2 border border-solid border-gray-400 rounded-lg text-slate-900 font-bold text-sm uppercase tracking-wide bg-white hover:bg-slate-900 hover:text-white transition-colors cursor-pointer">
        Load more products
      </button>
    </div>
  </div>
</div>

